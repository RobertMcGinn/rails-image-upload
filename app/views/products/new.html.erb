<section>
<h2>Add a new product</h2>
  <%= form_for @product do |f| %>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %><br /><br />
    <br>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %><br /><br />
    <br>
    <%= f.label :avatar %>
    <br>
    <%= f.file_field :avatar, accept: 'image/png,image/jpeg'%>
    <br><br><br>
    <%= f.label :image2 %>
    <br>
    <%= f.file_field :image2, accept: 'image/png,image/jpeg'%>
    <br><br><br>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
</section>


